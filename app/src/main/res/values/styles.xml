<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- MainActivity theme. -->
    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/shape_main_evening_background</item>
        <item name="actionBarStyle">@style/ActionBarTheme</item>
    </style>

    <!-- MainActivity's ActionBar theme. -->
    <style name="ActionBarTheme" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@android:color/transparent</item>
    </style>

    <!-- Style used in the SecondaryWeatherInfoFragment for TextViews showing the labels of
         the weather information -->
    <style name="ExtraDetailLabel" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Style used in the SecondaryWeatherInfoFragment for TextViews showing the values
         of the weather information -->
    <style name="ExtraDetailsValue" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/weather_info_text_size</item>
    </style>

</resources>
